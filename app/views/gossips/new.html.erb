

<!DOCTYPE html>
<html>
   <head>
      <title>The Gossip Project</title>
   </head>
   <body>
     <% if @alert %>
      <div class="alert alert-danger "><%= @message %></div>
      <% end %>

      <div class="container mt-5">
        <div class="row">
        <div class="col-4">
         
            <div class="card border-success mb-5" style="width: 18rem;">
               <div class="card-header">
                  <h4 class="h5 text-center">Nouveau Gossip</h4>
               </div>
               <div class="card-body">
                  <%= form_tag url_for(action: 'create'), method: "post" do %>
                  <div class='form-group'>
                     <label><%= label_tag 'Title' %></label></br>
                     <%= text_field_tag 'title', @post.title %></br>
                  </div>
                  <div class='form-group'>
                     <label><%= label_tag 'Body' %></label></br>
                     <%= text_area_tag 'content', @post.content, rows:'5' %></br>
                  </div>
                  <div class='form-group'>
                     <button type="submit" class="btn btn-primary">Envoyer</button>
                  </div>
                  <% end %>
               </div>
            </div>
        </div>
        <div class="col-8">
            <img class= "rounded-circle img-fluid" alt="profile pic" src="<%= asset_path("bouche.png") %>" style="height:300px;width:300px">
        </div>
        
      </div>
  </div>
   </body>
</html>